<h1>New contact</h1>

<form>
  <div class="form-group">
    <label for="name"></label>
    {{#each error in errors.name}}
      {{error.message}}
    {{/each}}
    {{input type="text" id="name" value=name placeholder="Name"}}
  </div>
  <div class="form-group">
  <label for="email"></label>
  {{#each error in errors.email}}
    {{error.message}}
  {{/each}}
    {{input type="text" id="email" value=email placeholder="Email"}}
  </div>
  <div class="form-group">
  <label for="phone"></label>
  {{#each error in errors.phone}}
    {{error.message}}
  {{/each}}
    {{input type="text" id="phone" value=phone placeholder="Phone"}}
  </div>

  <button {{action createContact}} class="btn btn-default">Create contact</button>
</form>
